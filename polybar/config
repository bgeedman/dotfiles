; This is the basic polybar config. Still need to make the colors better
[colors]
Darkgreen = #044434
Khaki = #f2cb90
Oldrose = #b73c50
Black = #161615
Brown = #682135
Grey = #424142
Blue = #88e9fd
background = #90000000


[bar/top]
monitor = eDP-1
width = 100%
height = 27
offset-y = 5
radius = 10.0
background = ${colors.background}
foreground = #f2f2f2
font-0 = Hack-Regular:size=10;0
font-1 = "FontAwesome:size=10;0"
modules-left = i3
modules-center = spotify
modules-right = wlan memory cpu volume battery clock
separator = |


[module/spotify]
type = custom/script
exec = ~/.config/polybar/spotify.sh
exec-if = pgrep -x spotify
interval = 10
tail = false
format = <label>
label =  %output% 
label-padding = 1
label-foreground = ${colors.Blue}



[module/i3]
type = internal/i3
format = <label-state> <label-mode>
format-spacing = 0
label-focused = %index%
label-focused-padding = 1
label-focused-margin = 0
label-focused-font = 1
label-focused-foreground = ${colors.Grey}
label-focused-background = ${colors.Blue}
label-unfocused = %index%
label-unfocused-padding = 1
label-unfocused-margin = 0
label-unfocused-font = 1
label-unfocused-foreground = ${colors.Blue}


[module/battery]
type = internal/battery
full-at = 90
battery = BAT0
adapter = AC0
time-format = %H:%M
format-charging = <animation-charging> <label-charging>
format-charging-padding = 1
format-discharging = <ramp-capacity> <label-discharging>
label-charging = Charging %percentage%%
label-charging-foreground = ${colors.Blue}
label-discharging = %percentage%%
label-discharging-foreground = ${colors.Blue}
format-full = <label-full>
label-full = Charged
label-full-foreground = ${colors.Blue}
format-discharging-padding = 1
format-full-padding = 1
ramp-capacity-0 = 
ramp-capacity-0-foreground = ${colors.Oldrose}
ramp-capacity-1 = 
ramp-capacity-1-foreground = ${colors.Khaki}
ramp-capacity-2 = 
ramp-capacity-2.foreground = ${colors.Khaki}
ramp-capacity-3 = 
ramp-capacity-3-foreground = ${colors.Blue}
ramp-capacity-4 = 
ramp-capacity-4-foreground = ${colors.Blue}
animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
animation-charging-framerate = 750


[module/volume]
type = internal/volume
format-volume = <label-volume> <ramp-volume>
lable-volume = %percentage%%
label-volume-foreground = ${colors.Blue}
format-volume-padding = 1
format-muted-foreground = ${colors.Oldrose}
label-muted-font = 2
label-muted = "  Mute"
format-muted-padding = 1
ramp-volume-foreground = ${colors.Blue}
ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 
ramp-headphones-0 = 
ramp-headphones-1 = 


[module/wlan]
type = internal/network
interface = wlan0
interval = 3.0
format-connected = <ramp-signal> <label-connected>
label-connected = %signal%% %essid%
label-connected-foreground = ${colors.Blue}
format-disconnected =
format-connected-padding = 1

ramp-signal-0 = 
ramp-signal-0-foreground = ${colors.Oldrose}
ramp-signal-1 = 
ramp-signal-1-foreground = ${colors.Khaki}
ramp-signal-2 = 
ramp-signal-2-foreground = ${colors.Khaki}
ramp-signal-3 = 
ramp-signal-3-foreground = ${colors.Khaki}
ramp-signal-4 = 
ramp-signal-4-foreground = ${colors.Blue}
ram-signal-5 = 
ramp-signal-5-foreground = ${colors.Blue}


[module/cpu]
type = internal/cpu
interval = 2.0
format = <label>
label = CPU: %percentage%%
label-foreground = ${colors.Blue}
format-padding = 1


[module/memory]
type = internal/memory
interval = 2.0
format = <label>
label = MEM: %percentage_used%%
label-foreground = ${colors.Blue}
format-padding = 1


[module/clock]
type = internal/date
interval = 1.0
date = %%{T3}%A, %B %e %I:%M:%S%%{T-}
format-padding = 1
format-foreground = ${colors.Blue}


